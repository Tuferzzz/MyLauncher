<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Now_Mode_Second"
        android:layout_width="1300dp"
        android:layout_height="510dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/IV_Heart_Big"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/linearLayout1"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/heart_big" />

        <TextView
            android:id="@+id/TV_Heart"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/IV_Heart_Big"
            android:layout_centerVertical="true"
            android:layout_marginRight="29dp"
            android:gravity="center"
             android:textColor="#FFFFFF"
            android:text="@string/Heart"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="450dp"
            android:layout_height="180dp"
            android:layout_above="@+id/TV_Heart"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="143dp"
            android:layout_toRightOf="@+id/IV_Heart_Big">

            <ImageButton
                android:id="@+id/IB_Heart_65"
                android:layout_width="80dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:background="@drawable/second_page_1_state"
                android:scaleType="fitXY"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/IB_Heart_75"
                android:layout_width="80dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:background="@drawable/second_page_2_state"
                android:scaleType="fitXY"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/IB_Heart_85"
                android:layout_width="80dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:background="@drawable/second_page_3_state"
                android:scaleType="fitXY"
                android:focusable="true"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/IV_Heart_Table"
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="99dp"
            android:src="@drawable/heart_table" />

    </RelativeLayout>

</RelativeLayout>