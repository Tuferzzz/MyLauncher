<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allapp_item_layout"
    android:layout_width="136.0dip"
    android:layout_height="136.0dip"
    android:background="@drawable/item_purple" >

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="70.0dip"
        android:layout_height="70.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18.0dip"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/app_hook"
        style="@style/normal_size"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6.0dip"
        android:layout_marginTop="6.0dip"
        android:src="@drawable/hook"
        android:visibility="gone" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100.0dip"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="17.0dip" />

</RelativeLayout>