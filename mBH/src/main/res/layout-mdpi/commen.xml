<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/Commen_First_Top"
        layout="@layout/commen_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/RL_Small_Layout"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:visibility="visible"

            >

            <ImageButton
                android:id="@+id/IB_Background_Left_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/background_left_in"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL_Big_Layout"
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left">

            <ImageButton
                android:id="@+id/IB_Background_Left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_left" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="200dp"
                android:layout_height="670dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_Up_Both"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/up_both"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/IB_Up_Only"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/up_only"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <com.ADA.util.CircleProgressBar
                        android:id="@+id/PB_Gradiend"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:max="20"
                        android:progress="10" />

                    <TextView
                        android:id="@+id/TV_Gradiend"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="36dp"
                        android:gravity="center"
                        android:text="@string/Gradient"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="120dp"
                        android:gravity="center"
                        android:text="@string/GradientUnit"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/circle_point_imgGradiend"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/IB_Down_Only"
                    android:layout_width="60sp"
                    android:layout_height="90sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:layout_weight="1"
                    android:background="@drawable/down_only"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/IB_Down_Both"
                    android:layout_width="60dp"
                    android:layout_height="90sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/down_both"
                    android:scaleType="fitXY" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL_Small_Layout_Right"
            android:layout_width="40dp"
            android:layout_height="720dp"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/IB_Background_Right_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/background_right_in"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL_Big_Layout_Right"
            android:layout_width="274dp"
            android:layout_height="720dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/IB_Background_Right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_right"

                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="740dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_Up_Both_Right"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/up_both_right"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/IB_Up_Only_Right"
                    android:layout_width="60sp"
                    android:layout_height="90sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/up_only_right"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1">

                    <com.ADA.util.CircleProgressBar
                        android:id="@+id/PB_Speed"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:max="20"
                        android:progress="10" />

                    <TextView
                        android:id="@+id/TV_Speed"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="36dp"
                        android:gravity="center"
                        android:text="@string/Speed"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/circle_point_imgSpeed"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/SpeedUnit"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="120dp"
                        android:gravity="center"
                        android:text="@string/SpeedUnit"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/IB_Down_Only_Right"
                    android:layout_width="60sp"
                    android:layout_height="90sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:layout_weight="1"
                    android:background="@drawable/down_only_right"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/IB_Down_Both_Right"
                    android:layout_width="60sp"
                    android:layout_height="90sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/down_both_right"
                    android:scaleType="fitXY" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/RL_Middle_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/RL_Big_Layout"
            android:layout_toLeftOf="@+id/RL_Big_Layout_Right"
            android:visibility="visible">

            <Button
                android:id="@+id/Btn_Back_Bottom"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/back_bottom"
                android:text="@string/Back"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/Btn_Pause_Bottom"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/pause_bottom"

                android:text="@string/Pause"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>