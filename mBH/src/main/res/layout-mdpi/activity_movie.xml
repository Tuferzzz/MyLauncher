<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background_movie">

    	<include android:id="@+id/Commen_First" layout="@layout/commen_top" />

    <LinearLayout
        android:layout_width="428dp"
        android:layout_height="579dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="210dp"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp" >

                <TextView
                    android:id="@+id/TV_All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/TV_History"
                    android:layout_alignBottom="@+id/TV_History"
                    android:layout_marginLeft="43dp"
                    android:layout_toRightOf="@+id/TV_History"
                    android:text="@string/All"
                    android:textColor="#FFFFFF"
                    android:clickable="true"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/TV_History"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="47dp"
                    android:text="@string/History"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" 
                     android:clickable="true"/>

                <TextView
                    android:id="@+id/TV_Collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/TV_All"
                    android:layout_alignBottom="@+id/TV_All"
                    android:layout_marginLeft="42dp"
                    android:layout_toRightOf="@+id/TV_All"
                    android:text="@string/Collect"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" 
                     android:clickable="true"/>

            </RelativeLayout>
					
               <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" 
            android:layout_marginTop="100dp"/>

               	 <LinearLayout
				        android:layout_width="200dp"
				        android:layout_height="match_parent"
				        android:layout_marginTop="110dp"
				        android:layout_marginLeft="150dp"
				        android:orientation="vertical" >
                
				               <ListView
				                   android:id="@+id/LV_Movie"
				                   android:layout_width="200dp"
				                   android:layout_height="match_parent" 
				                   android:layout_gravity="center"
				                  >
             					  </ListView>
            		</LinearLayout>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
