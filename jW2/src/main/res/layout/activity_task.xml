<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/task_background" >

  
    
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
            
			    <TextView
			        android:id="@+id/TV_SetPer"
			        android:layout_width="160sp"
			        android:layout_height="60sp"
			        android:layout_centerHorizontal="true"
			        android:layout_alignParentTop="true"
			        
			        android:gravity="center"
			        android:text="@string/Task"
			        android:textColor="#FFFFFF"
			        android:textSize="28sp" />

			    <ImageView
			        android:id="@+id/imageView1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_below="@+id/TV_SetPer"
			        android:layout_marginLeft="160dp"
			        android:layout_marginTop="80dp"
			        android:src="@drawable/task_imageview" />

			    <TextView
			        android:id="@+id/TextView01"
			        android:layout_width="100sp"
			        android:layout_height="40sp"
			       android:layout_marginLeft="40dp"
			       android:layout_marginTop="160dp"
			        android:gravity="center"
			        android:text="@string/Project"
			        android:textColor="#FFFFFF"
			        android:textSize="28sp" />

			    <ImageView
			        android:id="@+id/IV_TaskOptions"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/imageView1"
			        android:layout_alignTop="@+id/TextView01"
			        android:layout_marginLeft="35dp"
			        android:layout_marginTop="10dp"
			      />

			    <TextView
			        android:id="@+id/TextView02"
			        android:layout_width="100sp"
			        android:layout_height="40sp"
			        android:layout_alignLeft="@+id/TextView01"
			        android:layout_below="@+id/imageView1"
			        android:layout_marginTop="120dp"
			        android:gravity="center"
			        android:text="@string/Goal"
			        android:textColor="#FFFFFF"
			        android:textSize="28sp" />

			    <ImageView
			        android:id="@+id/ImageView01"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/imageView1"
			        android:layout_below="@+id/imageView1"
			       
			        android:layout_marginTop="80dp"
			        android:src="@drawable/task_imageview" />

			    <TextView
			        android:id="@+id/TV_TaskOptions"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/imageView1"
			        android:layout_marginBottom="20dp"
			        android:layout_alignRight="@+id/IV_TaskOptions"
			        android:gravity="center"
			        android:textSize="15sp" />

			    <TextView
			        android:id="@+id/TV_TaskOptionsText"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/ImageView01"
			        android:layout_marginBottom="20dp"
			        android:layout_alignRight="@+id/IV_TaskOptions"
			        android:gravity="center"
		
			        android:textSize="20sp" />

			    <ImageView
			        android:id="@+id/IV_TaskOptionsIcon"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_above="@+id/TV_TaskOptionsText"
			        android:layout_marginBottom="10dp"
			        android:layout_alignRight="@+id/IV_TaskOptions"
			        android:background="@drawable/task_time" />
			    
			    <TextView  
			        android:id="@+id/TV_TaskSpeed"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="310dp"
			        android:layout_marginLeft="310dp"
			        android:text="@string/SpeedCircle"
			        android:gravity="center"
			        android:textSize="20sp"
			        android:textColor="#FFFFFF"/>
			    
			     <TextView  
			        android:id="@+id/TV_TaskGradient"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="370dp"
			        android:layout_marginLeft="310dp"
			        android:text="@string/Gradient"
			        android:gravity="center"
			        android:textSize="20sp"
			        android:textColor="#FFFFFF"/>
			     
			     <com.ada.jw.HorizontalListView
			         android:id="@+id/list_view"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_marginStart="380dp"
			         android:layout_marginTop="150dp"
			         android:divider="@android:color/transparent"
		             android:fadingEdgeLength="5dp"
		             android:requiresFadingEdge="horizontal"
		             widget:dividerWidth="7dp"
			         />
		</RelativeLayout>
		

</RelativeLayout>
