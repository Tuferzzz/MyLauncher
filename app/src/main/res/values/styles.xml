<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback"></style>

    <style name="launcher_menu_image_style">
        <item name="android:layout_width">@dimen/launcher_menu_height</item>
        <item name="android:layout_height">@dimen/launcher_menu_height</item>
        <item name="android:paddingTop">5dp</item>

    </style>

    <style name="launcher_menu_image_copy_style">
        <item name="android:layout_width">@dimen/launcher_menu_copy_height</item>
        <item name="android:layout_height">@dimen/launcher_menu_copy_height</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="linearlayout_style">
        <item name="android:layout_width">@dimen/launcher_menu_linearlayout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/launcher_menu_marginleft</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:focusable">true</item>-->
        <!--<item name="android:clickable">true</item>-->
        <!--<item name="android:focusableInTouchMode">true</item>-->
        <item name="android:orientation">vertical</item>
        <item name="android:nextFocusUp">@+id/RL_tv</item>
    </style>

    <style name="launcher_menu_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/launcher_menu__text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="first">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
