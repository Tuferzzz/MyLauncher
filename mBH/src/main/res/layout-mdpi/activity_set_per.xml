<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_per_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV_SetPer"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="125dp"
                android:gravity="center"
                android:text="@string/set_per"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <Button
                android:id="@+id/IB_Set"
                style="@style/set_per_button_style"
                android:layout_marginLeft="485dp"
                android:text="@string/Set" />

            <Button
                android:id="@+id/IB_Confirm"
                style="@style/set_per_button_style"
                android:text="@string/Confirm" />

            <Button
                android:id="@+id/IB_Cancel"
                style="@style/set_per_button_style"
                android:text="@string/Back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IV_Boy"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/man_nospace" />

            <LinearLayout
                android:id="@+id/IV_Sex"
                style="@style/set_per_linearlayout_style"
                android:layout_marginLeft="30dp"
                android:background="@drawable/set_per_sex_selector">

                <TextView
                    style="@style/set_per_textview_1"
                    android:text="@string/Sex" />

                <TextView
                    android:id="@+id/TV_Sex_Show"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="@string/str_boy"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/IB_Age"
                style="@style/set_per_linearlayout_style"
                android:background="@drawable/set_per_age_selector">

                <TextView
                    style="@style/set_per_textview_1"
                    android:text="@string/Age" />

                <TextView
                    android:id="@+id/TV_Age_Show"
                    style="@style/set_per_textview_2" />

                <TextView
                    style="@style/set_per_textview_3"
                    android:text="@string/Year" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/IB_Height"
                style="@style/set_per_linearlayout_style"
                android:background="@drawable/set_per_height_selector">

                <TextView
                    style="@style/set_per_textview_1"
                    android:text="@string/Height" />

                <TextView
                    android:id="@+id/TV_Height_Show"
                    style="@style/set_per_textview_2" />

                <TextView
                    style="@style/set_per_textview_3"
                    android:text="@string/M" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/IB_Weight"
                style="@style/set_per_linearlayout_style"
                android:background="@drawable/set_per_weight_selector">

                <TextView
                    style="@style/set_per_textview_1"
                    android:text="@string/Weight" />

                <TextView
                    android:id="@+id/TV_Weight_Show"
                    style="@style/set_per_textview_2" />

                <TextView
                    style="@style/set_per_textview_3"
                    android:text="@string/Kg" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Time_Layout"
                style="@style/set_per_linearlayout_style"
                android:background="@drawable/set_per_time_selector"
                android:visibility="invisible">

                <TextView
                    style="@style/set_per_textview_1"
                    android:text="@string/Time" />

                <TextView
                    android:id="@+id/TV_Time_Show"
                    style="@style/set_per_textview_2" />

                <TextView
                    style="@style/set_per_textview_3"
                    android:text="@string/Min" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Hot_Layout"
                style="@style/set_per_linearlayout_style"
                android:background="@drawable/set_per_hot_selector"
                android:visibility="invisible">

                <TextView
                    style="@style/set_per_textview_1"
                    android:text="@string/Heat" />

                <TextView
                    android:id="@+id/TV_Hot_Show"
                    style="@style/set_per_textview_2" />

                <TextView
                    style="@style/set_per_textview_3"
                    android:text="@string/Kcal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Distance_Layout"
                style="@style/set_per_linearlayout_style"
                android:background="@drawable/set_per_distance_selector"
                android:visibility="invisible">

                <TextView
                    style="@style/set_per_textview_1"
                    android:text="@string/Distance" />

                <TextView
                    android:id="@+id/TV_Distance_Show"
                    style="@style/set_per_textview_2" />

                <TextView
                    style="@style/set_per_textview_3"
                    android:text="@string/m" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/Commen_First"
        layout="@layout/commen" />

    <include
        android:id="@+id/Keyboard"
        layout="@layout/keyboard" />


</RelativeLayout>