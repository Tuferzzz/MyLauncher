<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mode_now_background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp">
        <TextView
            android:id="@+id/TV_SetPer"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginLeft="131dp"
            android:gravity="center"
            android:text="@string/Mode_Now"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/IB_Stop"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="383dp"
            android:layout_toRightOf="@+id/TV_SetPer"
            android:background="@drawable/button_selector"
            android:orientation="vertical"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:id="@+id/TV_Stop"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="@string/Stop"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/IB_Pause"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/IB_Stop"
            android:layout_toRightOf="@+id/IB_Stop"
            android:background="@drawable/button_selector"
            android:orientation="vertical"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:id="@+id/TV_Pause"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="@string/Pause"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/IB_Back"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/IB_Pause"
            android:layout_toRightOf="@+id/IB_Pause"
            android:background="@drawable/button_selector"
            android:orientation="vertical"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:id="@+id/TV_Back"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="@string/Back"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/VPager_ModeNow"
        android:layout_width="1200dp"
        android:layout_height="510dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
         >
    </android.support.v4.view.ViewPager>
    

    <include android:id="@+id/Commen_First" layout="@layout/commen" />
    
</RelativeLayout>