<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="1000.0dip"
    android:layout_marginTop="20.0dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/net_icon"
        style="@style/normal_size"
        android:layout_width="55.0dip"
        android:layout_height="46.0dip"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10.0dip"
        android:onClick="onClick"
        android:src="@drawable/xml_wifi_choose_icon" />

    <TextView
        android:id="@+id/time"
        android:layout_width="110.0dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/net_icon"
        android:layout_marginLeft="25.0dip"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="@drawable/xml_textcolor"
        android:textSize="45.0dip"
        android:singleLine="true"
        android:ellipsize="none"
        />"

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/net_icon"
        android:layout_alignRight="@id/time"
        android:layout_marginTop="8.0dip"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="@drawable/xml_textcolor"
        android:textSize="16.0dip"
        android:text="yyy mm dd DD" />

</RelativeLayout>