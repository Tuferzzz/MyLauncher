<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeActivity" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="190dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/ic_ui_logo" />

    <RelativeLayout
        android:id="@+id/main_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="120.0dip" >

        <RelativeLayout
            android:id="@+id/main_function_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ic_main_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_ui_main_1"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusLeft="@+id/gridView"
                android:onClick="onClick"
                android:src="@drawable/xml_select" />

            <TextView
                android:id="@+id/ic_main_text_1"
                style="@style/normal_size"
                android:layout_alignLeft="@id/ic_main_1"
                android:layout_below="@id/ic_main_1"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="6dp"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/ic_main_str_1"
                android:textColor="#ffffffff"
                android:textSize="30.0dip" />

            <ImageView
                android:id="@+id/ic_main_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30.0dip"
                android:layout_toRightOf="@id/ic_main_1"
                android:background="@drawable/ic_ui_main_2"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/xml_select" />

            <TextView
                android:id="@+id/ic_main_text_2"
                style="@style/normal_size"
                android:layout_alignLeft="@id/ic_main_2"
                android:layout_below="@id/ic_main_2"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="6dp"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/ic_main_str_2"
                android:textColor="#ffffffff"
                android:textSize="30.0dip" />

            <ImageView
                android:id="@+id/ic_main_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30.0dip"
                android:layout_toRightOf="@id/ic_main_2"
                android:background="@drawable/ic_ui_main_3"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/xml_select" />

            <TextView
                android:id="@+id/ic_main_text_3"
                style="@style/normal_size"
                android:layout_alignLeft="@id/ic_main_3"
                android:layout_below="@id/ic_main_3"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="6dp"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/ic_main_str_3"
                android:textColor="#ffffffff"
                android:textSize="30.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_function_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_function_1"
            android:layout_marginTop="18dp" >

            <ImageView
                android:id="@+id/ic_main_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_ui_main_4"
                android:focusable="true"
                android:nextFocusLeft="@+id/gridView"
                android:onClick="onClick"
                android:src="@drawable/xml_select" />

            <TextView
                android:id="@+id/ic_main_text_4"
                style="@style/normal_size"
                android:layout_alignLeft="@+id/ic_main_4"
                android:layout_below="@+id/ic_main_4"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="6dp"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/ic_main_str_4"
                android:textColor="#ffffffff"
                android:textSize="30.0dip" />

            <ImageView
                android:id="@+id/ic_main_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30.0dip"
                android:layout_toRightOf="@id/ic_main_4"
                android:background="@drawable/ic_ui_main_5"
                android:focusable="true"
                android:onClick="onClick"
                android:src="@drawable/xml_select" />

            <TextView
                android:id="@+id/ic_main_text_5"
                style="@style/normal_size"
                android:layout_alignLeft="@id/ic_main_5"
                android:layout_below="@id/ic_main_5"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="6dp"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/ic_main_str_5"
                android:textColor="#ffffffff"
                android:textSize="30.0dip" />

            <ImageView
                android:id="@+id/ic_main_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30.0dip"
                android:layout_toRightOf="@id/ic_main_5"
                android:background="@drawable/ic_ui_main_6"
                android:clickable="true"
                android:focusable="true"
                android:nextFocusRight="@+id/gridView"
                android:onClick="onClick"
                android:src="@drawable/xml_select" />

            <TextView
                android:id="@+id/ic_main_text_6"
                style="@style/normal_size"
                android:layout_alignLeft="@id/ic_main_6"
                android:layout_below="@id/ic_main_6"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="6dp"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/ic_main_str_6"
                android:textColor="#ffffffff"
                android:textSize="30.0dip" />
        </RelativeLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="334.0dip"
        android:layout_height="460.0dip"
        android:layout_alignTop="@+id/main_function"
        android:layout_marginLeft="160dp"
        android:layout_toRightOf="@+id/main_function"
        android:columnWidth="108.0dip"
        android:horizontalSpacing="5.0dip"
        android:listSelector="@drawable/xml_select_litter"
        android:nextFocusRight="@id/ic_main_1"
        android:numColumns="3"
        android:verticalSpacing="5.0dip"
        android:visibility="visible" >
    </GridView>

    <include layout="@layout/notification_bar" />

</RelativeLayout>