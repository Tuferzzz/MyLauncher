<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <RelativeLayout
            android:id="@+id/RL_commenTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

            <ImageButton
                android:id="@+id/IB_downSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"

                android:background="@drawable/down_small" />

            <LinearLayout
                android:id="@+id/LL_BackAndPause"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|center"
                android:orientation="horizontal"
                android:visibility="visible">


                <Button
                    android:id="@+id/Back"
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:layout_weight="1.00"
                    android:background="@drawable/button_background"
                    android:text="@string/Back"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"

                    android:background="@drawable/bottom_middle"></LinearLayout>

                <Button
                    android:id="@+id/Pause"
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:layout_weight="1.00"
                    android:background="@drawable/button_background"
                    android:text="@string/Pause"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/Commen_First_Top"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="top">

                <ImageView
                    android:id="@+id/IV_Background_Top"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/background__top" />

                <TextView
                    android:id="@+id/TV_Gradiend"
                    android:layout_width="60dp"
                    android:layout_height="30dp"

                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="@string/Gradient"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/TV_Time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:text="@string/Time"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/TV_Speed"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="800dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:gravity="center"
                    android:text="@string/Speed"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/TV_Distance"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:text="@string/Distance"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/TV_Speed_Show_Top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TV_Speed"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"

                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TV_Heart_Show_Top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="640dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:gravity="center"

                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TV_Heat_Show_Top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="460dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:gravity="center"

                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TV_Distance_Show_Top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="290dp"

                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:gravity="center"

                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TV_Time_Show_Top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="120dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:gravity="center"

                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TV_GradiendShow_Top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="17dp"
                    android:gravity="center"

                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/TV_Heat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="460dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:text="@string/Heat"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/TV_Heart"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignBaseline="@+id/TV_Heat"
                    android:layout_marginLeft="640dp"

                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/TV_Gradiend"
                    android:gravity="center"
                    android:text="@string/Heart"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

            </RelativeLayout>

            <SlidingDrawer
                android:id="@+id/slidingDrawerSet"
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Commen_First_Top"
                android:bottomOffset="0dp"
                android:content="@+id/content"
                android:handle="@+id/handle"

                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sliding_up"
                    android:text="你好" />

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="259dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2.88"
                        android:background="@drawable/sliding_content_rl"
                        android:clickable="true"

                        >


                        <ImageView
                            android:id="@+id/IV_SpeedSliding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"

                            android:background="@drawable/gradient_sliding"
                            android:clickable="true" />

                        <com.ada.util.CircleProgressBar
                            android:id="@+id/PB_Speed"
                            android:layout_width="240dp"
                            android:layout_height="182dp"
                            android:layout_centerVertical="true"

                            android:layout_marginLeft="422dp"

                            />

                        <ImageView
                            android:id="@+id/circle_point_imgSpeed"
                            android:layout_width="260dp"
                            android:layout_height="240dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"

                            />

                        <TextView
                            android:id="@+id/CircleProgressBarSpeed"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="452dp"
                            android:layout_marginTop="100dp"
                            android:gravity="center"
                            android:text="@string/SpeedCircle"
                            android:textColor="#FFFFFF" />

                        <ImageView
                            android:id="@+id/IV_GradientSliding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@+id/IV_SpeedSliding"
                            android:background="@drawable/speed_sliding" />

                        <com.ada.util.CircleProgressBar
                            android:id="@+id/PB_Gradient"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:layout_toLeftOf="@+id/IV_SpeedSliding" />

                        <ImageView
                            android:id="@+id/circle_point_imgGradient"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@+id/IV_SpeedSliding" />

                        <TextView
                            android:id="@+id/ProgressBarGradient"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="70dp"
                            android:layout_marginTop="120dp"
                            android:layout_toLeftOf="@+id/IV_SpeedSliding"
                            android:gravity="center"
                            android:text="@string/Gradient"
                            android:textColor="#FFFFFF" />

                        <SeekBar
                            android:id="@+id/ldm_bottom_btn2_ssb"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="252dp"
                            android:layout_marginTop="93dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"
                            android:clickable="false"
                            android:max="100"
                            android:maxHeight="18dp"
                            android:maxWidth="00dp"
                            android:minHeight="18dp"
                            android:progressDrawable="@drawable/slide_btn_off"
                            android:thumb="@drawable/slide_btn_thumb"
                            android:thumbOffset="0dp" />

                        <ImageView
                            android:id="@+id/WiFi_ON"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="248dp"
                            android:layout_marginTop="90dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"

                            android:background="@drawable/switch_on"

                            />

                        <ImageView
                            android:id="@+id/WiFi_OFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="248dp"
                            android:layout_marginTop="90dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"
                            android:background="@drawable/switch_off" />


                        <SeekBar
                            android:id="@+id/SB_Load"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="252dp"
                            android:layout_marginTop="133dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"
                            android:clickable="false"
                            android:max="100"
                            android:maxHeight="18dp"
                            android:maxWidth="00dp"
                            android:minHeight="18dp"
                            android:progressDrawable="@drawable/slide_btn_off"
                            android:thumb="@drawable/slide_btn_thumb"
                            android:thumbOffset="0dp" />

                        <ImageView
                            android:id="@+id/Load_ON"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="248dp"
                            android:layout_marginTop="130dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"

                            android:background="@drawable/switch_on"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/Load_OFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="248dp"
                            android:layout_marginTop="130dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"
                            android:background="@drawable/switch_off" />

                        <Button
                            android:id="@+id/Btn_SlidingSetting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="210dp"
                            android:layout_marginTop="200dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"
                            android:background="@drawable/sliding_setting" />

                        <Button
                            android:id="@+id/Btn_SlidingMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="210dp"
                            android:layout_marginTop="240dp"
                            android:layout_toRightOf="@+id/circle_point_imgSpeed"
                            android:background="@drawable/sliding_menu" />

                        <com.ada.VerticalSeekBar.VerticalSeekBar
                            android:id="@+id/SeekBar_screenBrightness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="90dp" />

                        <com.ada.VerticalSeekBar.VerticalSeekBar
                            android:id="@+id/SeekBar_Voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="90dp" />

                        <ToggleButton
                            android:id="@+id/TB_toggleButtonMute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/SeekBar_Voice"
                            android:layout_below="@+id/SeekBar_Voice"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/voice_on"
                            android:clickable="true"
                            android:textOff=""
                            android:textOn="" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/IB_leftBoth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/left_both" />

                        <ImageButton
                            android:id="@+id/IB_leftOnly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/left_only" />


                        <ImageButton
                            android:id="@+id/IB_rightOnly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/right_only" />

                        <ImageButton
                            android:id="@+id/IB_rightBoth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/right_both" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blank"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:orientation="horizontal"

                        ></LinearLayout>
                </LinearLayout>
            </SlidingDrawer>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>